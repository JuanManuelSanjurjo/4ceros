---
import Layout from '../layouts/Layout.astro'
import Navbar from '../components/Navbar.astro'
import MenuComponent from '../components/MenuComponent.jsx'

let pageTitle = 'Menu - Restaurant'

let menuData = null;
let uniqueCategories = {};
try {
  const response = await fetch('https://script.google.com/macros/s/AKfycbxwh-FhCq2zmdU166CyM_WfTIHaNZWufY35WhuDblAGWNDcCUfhgDAN9AxGKuTruGGYpw/exec')

  if (!response.ok) {
    throw new Error(`HTTP error! status: ${response.status}`);
  }

  menuData = await response.json();
  uniqueCategories = [...new Set(menuData.menu.map(item  => item.category))];
} catch (error) {
  console.error('Error fetching menu data:', error);
  menuData = null;
}
---

<Layout title={pageTitle}>
  <Navbar />

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Nuestro menú</h1>
        <div class="h-1 w-20 bg-yellow-500 mx-auto mb-6"></div>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Cuidadosamente preparados con ingredientes de alta calidad</p>
      </div>

      {menuData && menuData.menu ? (
        <div id="menu-container">
          <MenuComponent client:load menuItems={menuData.menu} uniqueCategories={uniqueCategories} />
        </div>
      ) : menuData === null ? (
        <div class="text-center py-12">
          <div class="inline-block animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-yellow-500 mb-4"></div>
          <p class="text-xl text-gray-600">Cargando menu...</p>
        </div>
      ) : (
        <div class="text-center py-12">
          <h2 class="text-2xl font-bold text-red-600">No se pudo cargar el menú</h2>
          <p class="mt-4 text-gray-600">Por favor, inténtelo de nuevo más tarde o póngase en contacto con el restaurante directamente.</p>
        </div>
      )}
    </div>
  </section>
</Layout>
